<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/passionback" >

    <Button
        android:id="@+id/passioncord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@android:color/transparent"
        android:text="COORDINATOR" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="&quot;Move our senses with your movies \u0021\u0021\u0021&quot;"
        android:textColor="#fe0c28"
        android:textSize="35sp" />

    <Button
        android:id="@+id/passiondetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passioncord"
        android:layout_marginBottom="96dp"
        android:layout_toLeftOf="@+id/passioncord"
        android:background="@android:color/transparent"
        android:text="DETAILS" />

</RelativeLayout>